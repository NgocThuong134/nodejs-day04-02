<!DOCTYPE html>
<html>
  <head>
    <title>List Class</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
  
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
  
    th {
      background-color: #f2f2f2;
      font-weight: bold;
    }
  
    tr:hover {
      background-color: #f5f5f5;
    }
  </style>
  <body>
    <h1>Danh sách lớp</h1>
    <a href="/add"><button>Thêm lớp</button></a>
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Number student</th>
        <th>Action</th>
      </tr>
      <% lops.forEach(item => { %>
      <tr>
        <td><%= item.id %> </td>
        <td><%= item.name %> </td>
        <td><%= item.numberStudent %></td>
        <td><a href="/update/<%= item.id %>"><button>Update</button></a>
          <a href="/delete/<%= item.id %>"><button>Delete</button></a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
